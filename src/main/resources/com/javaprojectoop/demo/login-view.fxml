                        <Image url="@images/main%20logo.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="23.0" />
                     </VBox.margin>
                  </ImageView>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="204.0" styleClass="gray-bold-label" text="Login" textAlignment="CENTER">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets bottom="20.0" />
                           </padding>
                        </Label>
                        <VBox alignment="CENTER" prefHeight="77.0" prefWidth="100.0">
                           <children>
                              <Label fx:id="EmailField" prefHeight="18.0" prefWidth="433.0" styleClass="TextField-label" text="Email / Username" />
                              <TextField maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="438.0" styleClass="textfield" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="20.0" right="20.0" />
                           </padding>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="70.0" prefWidth="477.0">
                           <children>
                              <Label prefHeight="18.0" prefWidth="434.0" styleClass="TextField-label" text="Password" />
