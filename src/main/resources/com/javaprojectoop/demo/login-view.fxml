                                 <children>
                                    <!-- Hidden password field -->
                                    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="438.0" styleClass="textfield" />

                                    <!-- Visible password field (starts hidden) -->
                                    <TextField fx:id="visiblePasswordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="438.0" styleClass="textfield" visible="false" />

