<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="302.0" prefWidth="338.0" spacing="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaprojectoop.demo.AddPetController">
    <Label alignment="TOP_CENTER" text="Add Pet">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
      <VBox.margin>
         <Insets right="200.0" />
      </VBox.margin></Label>
    <TextField fx:id="nameField" promptText="Name">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin>
   </TextField>
    <TextField fx:id="typeField" promptText="Type">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></TextField>
    <TextField fx:id="breedField" promptText="Breed">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></TextField>
    <TextField fx:id="ageField" promptText="Age">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></TextField>
    <Button fx:id="btnSave" onAction="#handleAddPet" prefHeight="38.0" prefWidth="95.0" styleClass="primary-button" text="Add">
    <VBox.margin>
         <Insets left="200.0" top="20.0" />
      </VBox.margin></Button>
</VBox>
