<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<BorderPane fx:controller="com.javaprojectoop.demo.LogoutController" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="326.0" prefWidth="522.0"
            stylesheets="@application.css"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

   <top>
      <Text fx:id="logoutText" fill="#f11616" strokeType="OUTSIDE" strokeWidth="0.0" text="Logout"
            BorderPane.alignment="BOTTOM_CENTER"
            onMouseClicked="#handleLogout">
         <font>
            <Font name="System Bold" size="31.0"/>
         </font>
         <BorderPane.margin>
            <Insets top="16.0"/>
         </BorderPane.margin>
      </Text>
   </top>

   <center>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to logout?"
            BorderPane.alignment="CENTER">
         <font>
            <Font size="20.0"/>
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0"/>
         </BorderPane.margin>
      </Text>
   </center>

   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="110.0" prefWidth="522.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" styleClass="primary-button-outlined-logout" text="Cancel"
                    onAction="#handleCancel">
               <HBox.margin>
                  <Insets right="50.0"/>
               </HBox.margin>
            </Button>
            <Button fx:id="logoutButton" mnemonicParsing="false" styleClass="primary-button-logout"
                    stylesheets="@application.css" text="Logout" onAction="#handleLogout">
               <HBox.margin>
                  <Insets left="50.0"/>
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>

</BorderPane>
