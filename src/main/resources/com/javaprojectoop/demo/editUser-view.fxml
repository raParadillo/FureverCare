<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="10" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaprojectoop.demo.EditUserController">

    <Label alignment="TOP_CENTER" text="Edit Profile">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
    </Label>

    <TextField fx:id="firstNameField" promptText="First Name">
        <VBox.margin>
            <Insets left="30.0" right="30.0"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="lastNameField" promptText="Last Name">
        <VBox.margin>
            <Insets left="30.0" right="30.0"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="emailField" promptText="Gmail">
        <VBox.margin>
            <Insets left="30.0" right="30.0"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="phoneField" promptText="Phone Number">
        <VBox.margin>
            <Insets left="30.0" right="30.0"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="ageField" promptText="Age">
        <VBox.margin>
            <Insets left="30.0" right="30.0"/>
        </VBox.margin>
    </TextField>

    <TextField fx:id="addressField" promptText="Address">
        <VBox.margin>
            <Insets left="30.0" right="30.0"/>
        </VBox.margin>
    </TextField>

    <Button onAction="#handleSaveProfile" prefHeight="38.0" prefWidth="100.0"
            styleClass="primary-button" text="Save">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Button>

</VBox>
